<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Ваш сайт</title>
    
    <!-- Подключаем Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    
    <!-- Подключаем пользовательские стили -->
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <!-- Шапка сайта -->
    <header class="bg-dark text-white py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <!-- Ссылка на главную страницу -->
            <a href="/" class="text-white text-decoration-none h1 m-0">Афиша событий</a>
            
            <!-- Кнопка Войти с переходом на страницу логина -->
            <a href="/Account/Login" class="btn btn-light">Войти</a>
        </div>
    </header>

    <!-- Карусель изображений -->
    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <!-- Динамическое добавление слайдов -->
            @if (ViewBag.Images != null)
            {
                var first = true;
                foreach (var image in ViewBag.Images)
                {
                    var isActiveClass = first ? "active" : "";
                    first = false;
                    <div class="carousel-item @isActiveClass">
                        <img src="@Url.Content("~/images/" + image)" class="d-block w-100" alt="Концерт">
                    </div>
                }
            }
        </div>
        <!-- Управление каруселью -->
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Предыдущий</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Следующий</span>
        </button>
    </div>

    <!-- Основной контент страницы -->
    <main>
        @RenderBody() <!-- Это место для контента страницы -->
    </main>

    <!-- Подвал сайта -->
    <footer class="bg-dark text-white py-3 mt-5">
        <div class="container">
            <p class="mb-0">© 2024 Афиша событий - Все права защищены</p>
        </div>
    </footer>

    <!-- Подключаем Bootstrap JS с зависимостями для работы карусели, модальных окон и других компонентов -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
