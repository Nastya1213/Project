@model List<Project.Models.Ticket>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var concert = ViewBag.Concert as Project.Models.Concert;
}

<h2>@concert.Name - Покупка билетов</h2>
<div class="row justify-content-center">
    <div class="col-md-6">
        <h3>Доступные билеты:</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Место</th>
                    <th>Цена</th>
                    <th>Действие</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>@ticket.Seats</td>
                        <td>@ticket.Price</td>
                        <td>
                            <form asp-action="BuyTicket" method="post">
                                <input type="hidden" name="ticketId" value="@ticket.TicketId" />
                                <button type="submit" class="btn btn-primary">Купить</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>